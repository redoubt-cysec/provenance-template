# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# Shell scripts
[*.sh]
indent_size = 2
shell_variant = bash

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefile
[{Makefile,*.mk}]
indent_style = tab

# justfile
[justfile]
indent_style = space
indent_size = 2

# Ruby (for Homebrew formula)
[*.rb]
indent_size = 2

# Nix files
[*.nix]
indent_size = 2

# Docker
[Dockerfile*]
indent_size = 2

# GitHub Actions workflows
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# Configuration files
[.*.{yml,yaml}]
indent_size = 2
